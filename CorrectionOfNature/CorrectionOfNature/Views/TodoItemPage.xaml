<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorrectionOfNature.Views.TodoItemPage"
             BackgroundColor="White"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             Title="{Binding Name}">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Задача" />
        <Entry Text="{Binding Name}" />
        <Label Text="Заметки/Цель" />
        <Entry Text="{Binding Notes}" />
        <Label Text="Начать с" />
        <DatePicker x:Name="StartDate" Date="{Binding StartDate}" MinimumDate="{x:Static system:DateTime.Today}" Format="D" />
        <TimePicker x:Name="StartTime" Time="{Binding StartTime}" Format="T" />
        <Label Text="Закончить к" />
        <DatePicker x:Name="EndDate" Date="{Binding EndDate}" MinimumDate="{x:Static system:DateTime.Today}" Format="D" />
        <TimePicker x:Name="EndTime" Time="{Binding EndTime}" Format="T" />
        <Label Text="Статус" />
        <Switch IsToggled="{Binding Done}" />
        <Button Text="Сохранить" Clicked="OnSaveClicked" />
        <Button Text="Удалить" Clicked="OnDeleteClicked" />
        <Button Text="Отмена" Clicked="OnCancelClicked" />
    </StackLayout>
</ContentPage>