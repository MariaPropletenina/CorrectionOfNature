<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CorrectionOfNature.Views.ThanksForPlaying">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Fill" VerticalOptions="Fill" BackgroundColor="White">
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,20,0,0" Text="Демонстративность" />
            <Label x:Name="lblScore1"
                   FontSize="Large"
                   Margin="0,-35,30,0"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,5,0,0" Text="Застревание" />
            <Label x:Name="lblScore2"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,-20,0,0" Text="Педантичность" />
            <Label x:Name="lblScore3"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,-20,0,0" Text="Возбудимость" />
            <Label x:Name="lblScore4"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,-20,0,0" Text="Гипертимность" />
            <Label x:Name="lblScore5"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,-20,0,0" Text="Дистимность" />
            <Label x:Name="lblScore6"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,-20,0,0" Text="Тревожность" />
            <Label x:Name="lblScore7"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,-20,0,0" Text="Экзальтированность" />
            <Label x:Name="lblScore8"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,-20,0,0" Text="Эмотивность" />
            <Label x:Name="lblScore9"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <Label HorizontalTextAlignment="Start" FontSize="Large" FontAttributes="Bold" TextColor="#5246EA" Margin="30,-20,0,0" Text="Циклотимность" />
            <Label x:Name="lblScore10"
                   FontSize="Large"
                   Margin="0,-35,30,20"
                   TextColor="#5246EA"
                   HorizontalTextAlignment="End"/>
            <BoxView BackgroundColor="#5246EA" Margin="30,0,30,30" HeightRequest="2"  HorizontalOptions="FillAndExpand" />
            <Label HorizontalTextAlignment="Start" x:Name="lblResult" FontSize="Large" FontAttributes="Bold" TextColor="Red" Margin="30,-10,0,0" />
            <BoxView BackgroundColor="#5246EA" Margin="30,30,30,0" HeightRequest="2"  HorizontalOptions="FillAndExpand" />
            <Button x:Name="TaskButton" CornerRadius="30" Text="Перейти к советам" Margin="30,0,30,0" VerticalOptions="CenterAndExpand" Clicked="TaskButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>